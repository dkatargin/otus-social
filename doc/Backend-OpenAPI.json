{
  "openapi": "3.0.0",
  "info": {
    "title": "OTUS Social Network API",
    "description": "API для социальной сети, разработанной в рамках курса OTUS Highload Load Architect",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://{domain}/api/{apiVersion}/",
      "variables": {
        "domain": {
          "description": "Домен",
          "default": "localhost",
          "enum": ["localhost", "social.katargin.net"]
        },
        "apiVersion": {
          "default": "v1",
          "enum": ["v1"]
        }
      },
      "description": "API сервер"
    }
  ],
  "paths": {
    "/auth/register": { ... },
    "/auth/login": { ... },
    "/auth/logout": { ... },
    "/user/get/{userId}": { ... },
    "/dialog/{user_id}/send": {
      "post": {
        "summary": "Отправка личного сообщения",
        "description": "Отправляет сообщение от текущего пользователя к user_id (шардированное хранение)",
        "operationId": "sendDialogMessage",
        "tags": ["dialog"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "to": { "type": "integer", "description": "ID получателя" },
                  "text": { "type": "string", "description": "Текст сообщения" }
                },
                "required": ["to", "text"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Сообщение отправлено"
          }
        }
      }
    },
    "/dialog/{user_id}/list": {
      "get": {
        "summary": "Получение диалога с пользователем",
        "description": "Получает список сообщений между текущим пользователем и user_id (с пагинацией, шардированное хранение)",
        "operationId": "getDialogMessages",
        "tags": ["dialog"],
        "parameters": [
          { "name": "user_id", "in": "path", "required": true, "schema": { "type": "integer" }, "description": "ID собеседника" },
          { "name": "limit", "in": "query", "required": false, "schema": { "type": "integer", "default": 50 }, "description": "Лимит сообщений" },
          { "name": "offset", "in": "query", "required": false, "schema": { "type": "integer", "default": 0 }, "description": "Смещение для пагинации" }
        ],
        "responses": {
          "200": {
            "description": "Список сообщений",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "from_id": { "type": "integer" },
                      "to_id": { "type": "integer" },
                      "text": { "type": "string" },
                      "created_at": { "type": "string", "format": "date-time" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": { ... }
}
